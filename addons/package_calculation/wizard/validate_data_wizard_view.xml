<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="view_validate_data_wizard_form" model="ir.ui.view">
        <field name="name">validate.data.wizard.form</field>
        <field name="model">validate.data.wizard</field>
        <field name="arch" type="xml">
            <form string="My Wizard">
                <div class="oe_title">
                        <h1>
                            The information is correct?
                        </h1>
                    </div>
                <group>
                    <field name="partner_name" />
                    <field name="partner_street" />
                    <field name="country_id" />
                </group>
                <group>
                    <field name="vat_type" />
                    <field name="partner_vat" />
                </group>
                <footer>
                    <button
                        string="Confirm"
                        type="object"
                        name="action_confirm"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
